extend base.pug

block content 
    h4 Update Video
    form(method="POST")
        input(name="title" placeholder="Video Title",value=video.title,required)
        input(placeholder="Description", type="text",value=video.description,name="description", minlength=20)
        input(placeholder="Hashtags, seperated by comma", value=video.hashtags.join(), type="text",name="hashtags")
        input(value="Save",type="submit")
