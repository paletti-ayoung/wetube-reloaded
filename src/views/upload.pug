extend base.pug

block content 
  if errorMessage 
      span=errorMessage
  form(method="POST", enctype="multipart/form-data")
    label(for="Video") Video File
    input(type="file", accept ="video/*", id = "video", name="video")
    input(placeholder="Title", required, type="text",name="title", maxlength=80)
    input(placeholder="Description", type="text",name="description", minlength=20)
    input(placeholder="Hashtags, seperated by comma",  type="text",name="hashtags")
    input(type="submit", value= "Upload Video")